{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@sim-engine/*": [
        "packages/sim-engine/src/*"
      ],
      "@devices/*": [
        "packages/devices/src/*"
      ],
      "@mcu-emu/*": [
        "packages/mcu-emu/src/*"
      ]
    }
  }
}